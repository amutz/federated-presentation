<div class="col-md-8">

  <h3>Community: {{model.name}}</h3> <br>
  <ul class="list-group">
    {{#each submissions as |submission| }}
    <li {{bindAttr id="submission.id"}} class="list-group-item"> 
    <button {{action "upvote" submission}}> &#11014; </button>
    {{submission.score}} 
    <button {{action "downvote" submission}}> &#11015; </button>
    - {{submission.title}} - {{submission.link}}
    </li>
    {{/each}}
  </ul>
</div>

<div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-body">
      <h4>Submit a new link:</h4>
      <form {{action "add_submission" on="submit"}}>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">Title</span>
            {{input value=title type="text" class="form-control"}}
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">URL</span>
            {{input value=link type="text" class="form-control"}}
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default">Submit Link</button>
        </div>
      </form>
    </div>
  </div>
</div>
